---
import "../styles/global.css";
import '@fontsource/poppins';
import Ancle from "../components/Ancle.astro";
import Search from "../../public/icons/search.svg"
import Logo from "../../public/logo/logo_white.svg"
import Phone from "../../public/icons/phone.svg"
import Mail from "../../public/icons/mail.svg"
---
<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width"/>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg"/>
    <meta name="generator" content={Astro.generator}/>
    <title>Astro Basics</title>
</head>
<body class=" !h-[5000px]">
<header id="main-header" class="hidden sm:block w-full h-24">
    <div class="flex gap-8 flex-row justify-between items-center w-[80%] mx-auto h-full">
        <Logo  width={143} height={50} />
        <div class="flex flex-row gap-8">
            <div class="flex flex-row justify-between gap-2">
                <div class="rounded-full bg-primary p-3 text-white">
                    <Phone/>
                </div>
                <div>
                    <p>51 00 0000 0000</p>
                    <p>51 00 0000 0000</p>
                </div>
            </div>
            <div class="flex flex-row justify-between gap-2">
                <div class="rounded-full bg-primary p-3 text-white">
                    <Mail/>
                </div>
                <div>
                    <p>mail@localhost.xyz</p>
                    <p>mail@localhost.xyz</p>
                </div>
            </div>
            <div class="px-5 py-3 bg-primary text-white rounded-3xl">
                APPOINTMENT
            </div>
        </div>
    </div>
</header>
<nav class="flex  bg-primary mx-auto w-[75%] h-20 justify-between items-center flex-row border-r-15 border-l-15 border-b-15 border-background z-10">
   <div class="flex gap-6 h-full">
       <Ancle text="Inicio" path="Inicio"/>
       <Ancle text="Nosotros" path="Sobre Nosotros"/>
       <Ancle text="Servicios" path="Servicios"/>
       <Ancle text="Contact" path="Contact"/>
       <Ancle text="Dentist" path="Dentist"/>
       <Ancle text="Blog" path="Blog"/>
   </div>
    <div class="flex p-3 items-center mr-4 hover:bg-primary-light">
        <Search/>
    </div>
</nav>

<slot/>
<p>Hola mund111o</p>

<footer class="mx-auto bg-tertiary h-auto w-full p-4" >
    <p> Lorem ipsum dolor sit amet, consectetur adipisicing elit. Alias architecto dolorem ducimus, eaque exercitationem facere in inventore minima nostrum, possimus provident quam quia quibusdam similique sint soluta tempore vitae voluptatum.</p>
</footer>
</body>
</html>

<style>
    html,
    body {
        margin: 0;
        width: 100%;
        height: 100%;
    }
</style>
