---
import "../styles/global.css";
import '@fontsource/poppins';
import Ancle from "../components/Ancle.astro";
import Search from "../../public/icons/search.svg"
import Logo from "../../public/logo/logo_white.svg"
import Phone from "../../public/icons/phone.svg"
import Mail from "../../public/icons/mail.svg"
---
<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width"/>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg"/>
    <meta name="generator" content={Astro.generator}/>
    <title>Astro Basics</title>
</head>
<body>
<header class="w-full h-24">
    <div class="flex gap-4 flex-row justify-center text-foreground items-center h-full">
        <div class="text-primary-light">
            <Logo/>
        </div>

        <div class="w-[20%]"/>

        <div class="flex gap-4 flex-row">
            <div class="bg-primary rounded-full p-3">
                <Phone/>
            </div>

            <div class="flex flex-col gap-2">
                <p>+593 93 92 25866</p>
                <p>+593 93 92 25866</p>
            </div>
        </div>
        <div class="flex gap-4 flex-row">
            <div class="bg-primary rounded-full p-3">
               <Mail/>
            </div>
            <div class="flex flex-col gap-2">
                <p>wendysele07@gmail.com</p>
                <p>wsflore@uce.edu.ec</p>
            </div>
        </div>
        <div class="px-4 py-3 bg-primary text-white rounded-3xl">
            APPOINTMENT
        </div>
    </div>
</header>
<nav class="flex  bg-primary mx-auto w-[75%] h-20 justify-between items-center flex-row border-r-15 border-l-15 border-b-15 border-background z-10">
   <div class="flex gap-6 h-full">
       <Ancle text="Inicio" path="Inicio"/>
       <Ancle text="Nosotros" path="Sobre Nosotros"/>
       <Ancle text="Servicios" path="Servicios"/>
       <Ancle text="Contact" path="Contact"/>
       <Ancle text="Dentist" path="Dentist"/>
       <Ancle text="Blog" path="Blog"/>
   </div>
    <div class="flex p-3 items-center mr-4 hover:bg-primary-light">
        <Search/>
    </div>
</nav>

<slot/>

<footer class="mx-auto bg-tertiary h-auto w-full p-4" >
